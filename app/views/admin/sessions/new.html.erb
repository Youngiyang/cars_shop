<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4 login">
    <div class="at-form">
      <div class="at-title">
        <h3 class="text-center">登录</h3>
      </div>
      <%= form_for(resource, 
          as: resource_name, 
          url: session_path(resource_name), 
          html: { method: :post }) do |f| %>

        <div class="at-pwd-form">
          <form role="form" id="at-pwd-form" novalidate action="#" method="POST">
            <fieldset>
              <div class="at-input form-group">

                <%= f.label :email, '帐号', class: "control-label" %>
                <%= f.text_field :email, 
                    autofocus: true, 
                    autocorrect: 'off', 
                    autocapitalize: 'none', 
                    class: 'form-control', 
                    placeholder: '邮箱' %>
                <span class="help-block hide"></span>
                
              </div>
              <div class="at-input form-group">

                <%= f.label :password, '密码', class: "control-label" %>
                <%= f.password_field :password, 
                    autocomplete: 'off',
                    autocorrect: 'off', 
                    autocapitalize: 'none', 
                    class: 'form-control',
                    placeholder: '密码' %>
                <span class="help-block hide"></span>

              </div>

              <div class="at-input form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "记住我" %>
              </div>

              <button type="submit" class="at-btn submit btn btn-lg btn-block btn-primary cyan" id="at-btn" data-disable-with="请稍等...">登录</button>
            </fieldset>
          </form>
        </div>
        <div class="at-signup-link">
          <p>
            <br>
            <%= link_to "忘记密码?", new_admin_password_path, class: "pull-right", "data-skip-pjax":""  %>
            <br>
          </p>
        </div>

      <% end %>
    </div>
  </div>
</div>
