<div class="row">
  <div class="col-sm-12">
    <div class="admin-content">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="title">
         创建线下订单（成功状态）
          </h1>
          <hr>
          <div class="well">
            <table class="table">
              <tr>
                <td>订单编号</td>
                <td><%= @order.code %></td>
              </tr>
              <tr>
                <td>订单日期</td>
                <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              </tr>
              <tr>
                <td>服务项目</td>
                <td><%= @order.order_shop_service.shop_service.name %></td>
              </tr>
              <tr>
                <td>价格</td>
                <td><%= @order.total_price %></td>
              </tr>
              <tr>
                <td>付款方式</td>
                <td>
                  <% if @order.pay_type == 'cash' %>
                  现金
                  <% else %>
                  微信
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>服务人员</td>
                <td><%= @order.barber.name %></td>
              </tr>
              <tr>
                <td colspan="2" style="text-aligin:center">
                  <%= link_to '返回', new_admins_order_path %>
                </td>
              </tr>
              
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
