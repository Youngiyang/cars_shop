<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1 class="title">订单验证
    </h1>
    <hr>
    <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
      <div class="row">
        <div class="col-xs-12 pull-right text-right">
          <div id="posts_filter" class="dataTables_filter">
            <label>
            <%= form_tag admins_create_order_search_path, remote: true do%>
             <%= text_field_tag 'code', nil, class: "form-control input-sm" %>
              <button type="submit" class="btn btn-primary cyan">搜索订单</button>
            <% end %>
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
              <tr role="row">
                  <th>订单号</th>
                  <th>用户</th>
                  <th>商品名</th>
                  <th>联系人</th>
                  <th>联系电话</th>
                  <th>要求</th>
                  <th>所在区域</th>
                  <th>订单状态</th>
              </tr>
              </thead>
              <tbody>
                <%= render @orders %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 pull-right text-right" id="will_page">
          <%=  will_paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>










  



