<tr role="row">
  <td><%= image_tag advertisement.img_url, width: 120 %></td>
  <td><%= advertisement.link%></td>
  <td><%= advertisement.position %></td>
  <td><%= raw advertisement.description %></td>
  <td>
      <%= link_to '编辑', edit_admin_advertisement_path(advertisement) %>
      <%= link_to '删除', admin_advertisement_path(advertisement),
          method: "delete",
          remote: true,
          data: {:confirm => "确定删除？"} %>
  </td>
</tr>