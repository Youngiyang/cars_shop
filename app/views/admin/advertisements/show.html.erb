<div class="row">
  <div class="col-sm-12">
    <div class="admin-content">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="title">我的店铺
          <% link_to admins_services_path, class: 'btn btn-default btn-xs', title: '取消' do%>
          <i class="fa fa-mail-reply"></i>
          <% end %>
          </h1>
          <hr>
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a href="#home" aria-controls="home" role="tab" data-toggle="tab">店铺详情</a>
            </li>
            <li role="presentation">
              <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">店铺服务</a>
            </li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
            <br>
            <div role="tabpanel" class="tab-pane active" id="home">

              <div class="form-group">
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">店铺名称</label>

                  <label class="col-md-8 control-label"><%= @shop.name %></label>
                </div>
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">联系电话</label>

                  <label class="col-md-8 control-label"><%= @shop.phone_number %></label>

                </div>
              </div>

              <div class="form-group">
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">最大预约数</label>

                  <label class="col-md-8 control-label"><%= @shop.max_range_order %></label>
                </div>
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">营业时间</label>

                  <label class="col-md-8 control-label"><%= @shop.business_hour %></label>

                </div>
              </div>

              <div class="form-group">
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">预约时间</label>

                  <label class="col-md-8 control-label"><p><%= @shop.periods %></p></label>
                </div>
                <div class="col-md-6 col-sm-12">
                  <label class="col-md-4 control-label">店铺地址</label>

                  <label class="col-md-8 control-label"><p><%= @shop.address %></p></label>

                </div>
              </div>


              <div class="form-group">
                <div class="col-md-12 col-sm-12">
                  <label class="col-md-4 control-label">banner图片</label>
                </div>

                <div class="col-md-12 col-sm-12">
                  <label class="col-md-8 control-label"><%= image_tag @shop.banner_img, size: "200x100" %></label>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 col-sm-12">
                  <label class="col-md-12 control-label">店铺图片</label>
                </div>

                <div class="col-md-12 col-sm-12">
                  <label class="col-md-8 control-label"><%= image_tag @shop.thumb_img, size: "200x100" %></label>

                </div>
              </div>

              <div class="form-group qrcode">
                <div class="col-md-12 col-sm-12">
                  <label class="col-md-4 control-label">支付二维码</label>
                </div>

                <div class="col-md-6 col-sm-12">
                  <label class="col-md-12 control-label">
                    <img src="/uploads/tmp/<%= @file_name %>" alt="" width="120" height="120">
                    <%= link_to '下载', admins_download_qrcode_path(@shop), class: "btn btn-danger btn-sm", download: 'qrcode',  'data-skip-pjax' => true%>
                  </label>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 col-sm-12">
                  <label class="col-md-4 control-label">简介</label>
                </div>

                <div class="col-md-12 col-sm-12">
                  <label class="col-md-12 control-label"><p><%= raw @shop.description %></p>
                  <br><br></label>
                </div>

              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="profile">
              <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row"></div>
                <div class="row">
                  <div class="col-xs-12">
                    <div class="table-responsive">
                      <table class="table table-bordered table-hover">
                        <thead>
                        <tr role="row">
                          <th>服务项目</th>
                          <th>价格</th>
                          <th>详情</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% @shop.shop_services.each do |s| %>
                            <tr>
                              <td><%= s.name %></td>
                              <td><%= s.price %></td>
                              <td>
                                <%= link_to '查看', admins_shop_shop_service_path(@shop,s.id) %>

                                <%= link_to '编辑',edit_admins_shop_shop_service_path(@shop,s.id) %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <div class="row"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.nav-tabs li a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })
  })
</script>
