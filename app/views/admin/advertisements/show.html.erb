<div class="row">
  <div class="col-sm-12">
    <div class="admin-content">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h1 class="title">
         创建广告（成功状态）
          </h1>
          <hr>
          <div class="well">
            <table class="table">
              <tr>
                <td>图片链接</td>
                <td><%= image_tag @advertisement.img_url %></td>
              </tr>
              <tr>
                <td>跳转链接</td>
                <td><%= @advertisement.link %></td>
              </tr>
              <tr>
                <td>显示位置</td>
                <td><%= @advertisement.position %></td>
              </tr>
              <tr>
                <td>描述</td>
                <td><%= raw @advertisement.description %></td>
              </tr>
              <tr>
                <td colspan="2" style="text-aligin:center">
                  <%= link_to '返回', new_admin_advertisement_path %>
                  <%= link_to '修改', edit_admin_advertisement_path(@advertisement)  %>
                </td>
              </tr>
              
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
